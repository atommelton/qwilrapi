    const blocks = [
        { 
            id: 'zqXo81HVXqeFEQgZI3yES190XU1WVg', // First block (header)
            substitutions: {
                all_pet_names: allPets,
                to_country: formattedToCountry
            }
        },
        { id: 'MU4dg7VouyBCqzxZT9sggEJNevoxzg' },  // STW Difference
