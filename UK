            splashSettings: {
                imageUrl: splashImageUrl
            }
        },
        { id: 'zKcMh6lv3W6YUGL8sNbEUPRCqKKebg' },  // Shopping smarter
        {
            id: '3izED51UeVZ8EIb85yLNIxGP7HRUmg',  // UK pricing
            substitutions: {
                all_pet_names: allPets,
                airline_quoted_qwilr_note: airlineQuoted,
